<h1> 2016 Candidates </h1>
 <div class="container-fluid">
  <div class="row">
 <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search for Candidates">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
 </form>
 </div>
 </div>







<% @candidates.each do |candidate| %>
 <div class="col-md-2">
<div class="well" style="width: 120%;">
 
  <h3><img src = <%= candidate.image %>></h5>
  <h5> Name : <a href ="/elections/<%= candidate.id %>"><%= candidate.name %></a></h5>
  <h5> Party Affiliation : <%= candidate.party_affiliation %></h5>
  <h5> Experience : <%= candidate.experience %></h5>
  <h5> Background : <%= candidate.background %></h5>
   <input id="accept" name="accept" type="checkbox" value="1"> Compare </input>
 </div>
 </div>
<% end %>

<%= button_tag "Compare Now" %>