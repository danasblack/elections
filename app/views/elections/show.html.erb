  <div class="container-image">
    <div class ="sidebar">
      <ul>
        <div class="container-item">
          <li><a href="#background"> Background </a></li>
        </div>  
        <div class="container-item">
          <li><a href="#issues"> Issues </a></li>
        </div>
        <div class="container-item">
          <li><a href="#results"> Primary Results </a></li>
        </div>
      </ul>  
    </div>
    <h4><img src = <%= @candidate.image %>></h4>
    <h4> Name : <%= @candidate.name %></h4>
    <h4> Party Affiliation : <%= @candidate.party_affiliation %></h4>
    <h4> Experience : <%= @candidate.experience %></h4>
    <a href="/elections"> Back to all candidates</a>

    <%= form_tag '/ballotcandidates', method: :post do %>
    <div>
     <%= hidden_field_tag :party_candidate_id, @candidate.id %>
   </div> 
   <div>
     <%= submit_tag "Add Candidate to Ballot" %>
     <% end %>  


     <div class="container">

      <div id="background" class="container-background">      
        <h2>Background</h2>
        <p>
          <h2><%= @candidate.background %></h2>
        </p>
      </div>

      <div id="issues" class="container-issues">
        <h2>Issues</h2>
        <h4 >Individual Issues</h4>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="{{issue.id}}" aria-valuemin="0" aria-valuemax="100" style="width: 90%">
            <span class="sr-only"></span>
          </div>
        </div>
        <h4>Domestic Issues</h4>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="{{issue.id}}" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
            <span class="sr-only"></span>
          </div>
        </div>
        <h4>Defense Issues</h4>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="{{issue.id}}" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            <span class="sr-only"></span>
          </div>
        </div>
        <h4>Economic Issues</h4>
        <div class="progress">
          <div class="progress-bar" role="progressbar" aria-valuenow="{{issue.id}}" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
            <span class="sr-only"></span>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</div>
<div id="results" class="container-chart">   
  <h2> Current Presidential Primary Results </h2>
  <h2> Democratic Delegate Results </h2>
  <%= pie_chart({"Pledged Delegates - Clinton" => 1768, "Pledged Delegates - Sanders" => 1494, "Super Delegates - Sanders" => 39, "Super Delegates - Clinton" => 538}) %>
  <h2> Total for Sanders - 1839 </h2>
  <h2> Total for Clinton - 2283 </h2>
</div>



