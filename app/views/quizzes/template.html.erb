<div ng-app="app">
  <div ng-controller="quizApp" ng-init="setup()">
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel" data-interval="false">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
        <li ng-repeat="issue in issues" data-target="#carousel-example-generic" data-slide-to="{{$index + 1}}"></li>
        <li data-target="#carousel-example-generic" data-slide-to="{{issues.length + 1}}"></li>
      </ol>
  

 

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">

        <div class="item active">
          <img src="http://rjtoursonline.com/wp-content/uploads/2013/07/Mount-Rushmore-Flag.jpg" alt="...">

          <div class="carousel-caption">
          <div class="well" id="quiz-scroll">
          <h1 id="start-text">Who Should I Choose?</h1>
          <h5>Take this quiz to find out which presidential candidate you are most aligned with.</h5>
          <a class="carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <button type="button" class="btn btn-default" id="start" aria-hidden="true">Start the quiz</button>
          </a>  
            </div>
        <div class="alert alert-warning alert-dismissable">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <% flash.each do |k, v| %>
          <div id="<%= k %>"><%= v %></div>
        <% end %>
  </div>
          </div>
        </div>
        <div ng-repeat="issue in issues" class="item">
          <img src="http://rjtoursonline.com/wp-content/uploads/2013/07/Mount-Rushmore-Flag.jpg" alt="...">
          <div class="carousel-caption">
           <div class="well" id="quiz-scroll">
            <div class="multiple-choice-options">
            <h3>{{ issue.question }}</h3>
              
            <div>
              <label>
                <input ng-model="issue.answer" type="radio" name="question-{{issue.id}}" id="" value="1" checked>
                Strongly Favor
              </label>
            </div>
            <div>
              <label>
                <input ng-model="issue.answer" type="radio" name="question-{{issue.id}}" id="" value="2">
                Favor
              </label>
            </div>
            <div>
              <label>
                <input ng-model="issue.answer" type="radio" name="question-{{issue.id}}" id="" value="3">
                Neutral
              </label>
            </div>
            <div>
              <label>
                <input ng-model="issue.answer" type="radio" name="question-{{issue.id}}" id="" value="4">
                Opposed
              </label>
            </div>
            <div>
              <label>
                <input ng-model="issue.answer" type="radio" name="question-{{issue.id}}" id="" value="5">
                Strongly Opposed
              </label>
            </div>
            </div>
       <!--      <div class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <button type="button" class="btn btn-default" id="quiz_question_button" aria-hidden="true">Next</button>
          </div>  --> 
          </div>
          </div>
        </div>
        <div class="item">
          <img src="http://rjtoursonline.com/wp-content/uploads/2013/07/Mount-Rushmore-Flag.jpg" alt="...">
           <div class="carousel-caption">
            <button href="/quizzes/result" ng-click="submitQuiz()" type="submit" class="btn btn-default">Submit</button>
          </div>
        </div>
      </div>
    </div>
    <!-- Controls -->
   <!--  <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true">Previous Question</span>
      <span class="sr-only">Previous</span>
    </a> -->
    <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true">Next Question</span>
      <span class="sr-only">Next</span>
    </a>


